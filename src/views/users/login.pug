extends ../base

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="username", type="text", placeholder="ID", required)
        input(name="password", type="password", placeholder="Password", required)
        input(type="submit", value="Login")
        include ../partials/social-login
    div.auth-switch 
        span Dont' have an account? 
        a(href="/join") Create one now &larr;