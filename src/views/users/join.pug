extends ../base

block content 
    div.default__container
        h3 회원가입
        if errorMessage
            span=errorMessage
        form(method="POST")
            label(for="username") 아이디
            input(id="username", name="username", type="text", placeholder="ID", required)
            label(for="password") 비밀번호
            input(id="password", name="password", type="password", placeholder="Password", required)
            label(for="password2") 비밀번호 확인
            input(id="password2", name="password2", type="password", placeholder="Confirm Password", required)
            label(for="name") 이름
            input(id="name", name="name", type="text", placeholder="Name", required)
            label(for="email") 이메일
            input(id="email", name="email", type="email", placeholder="Email", required)
            label(for="location") 지역
            input(id="location", name="location", type="text", placeholder="Location", required)
            input(type="submit", value="Join")
            include ../partials/social-login
        div.auth-switch 
            span 이미 회원가입이되어 있으신가요? 
            a(href="/login") 로그인하기