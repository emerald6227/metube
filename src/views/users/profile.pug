extends ../base
include ../mixins/video

block content
    div.default__container
        div.profile__data
            if user.avatarUrl 
                if isHeroku
                    if(user.avatarUrl === `images/default-profile.png`)
                        img(src=`/${user.avatarUrl}`).avatar
                    else
                        img(src=`${user.avatarUrl}`).avatar
                else
                    img(src=`/${user.avatarUrl}`).avatar
            h3 #{user.name}
        div.video-grid.video-grid--small
            each video in user.videos 
                +video(video)
            else
                span.empty__message No videos found

block scripts
    script(src="/static/js/previewVideo.js")