extends ../base
include ../mixins/video

block content
    div.profile__data
        if loggedInUser.avatarUrl 
            if isHeroku
                if(loggedInUser.avatarUrl === `images/default-profile.png`)
                    img(src=`/${loggedInUser.avatarUrl}`).avatar
                else
                    img(src=`${loggedInUser.avatarUrl}`).avatar
            else
                img(src=`/${loggedInUser.avatarUrl}`).avatar
        h3 #{user.name}
    div.video-grid
        each video in user.videos 
            +video(video)
        else
            span.empty__message No videos found